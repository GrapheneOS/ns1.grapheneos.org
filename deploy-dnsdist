#!/bin/bash

set -o errexit -o nounset -o pipefail

touch dnsdist-lock
exec {fd}< dnsdist-lock
if ! flock -n $fd; then
    echo already deploying >&2
    exit 1
fi

. servers.sh

for server in ${servers[@]}; do
    echo $server

    remote=root@$server

    if [[ $server == *.ns1.grapheneos.org ]]; then
        subdomain=ns1
    else
        subdomain=ns2
    fi

    cp dnsdist.conf dnsdist.conf.tmp
    sed -i s/{{subdomain}}/$subdomain/g dnsdist.conf.tmp
    rsync -pcv --chmod=F644 --fsync --preallocate dnsdist.conf.tmp $remote:/etc/dnsdist.conf
    rm dnsdist.conf.tmp

    ssh $remote usermod dnsdist -G tls
    ssh $remote systemctl restart dnsdist
done
